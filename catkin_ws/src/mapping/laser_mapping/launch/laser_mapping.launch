<launch>
	<!-- Remap topics -->
        <remap from="systems/input/lidar_pointcloud" to="/cloud_in"/>
	<remap from="/scan" to="mapping/laserscan"/>
	
	<!-- Launch the point cloud to laserscan node -->
	<node name="pointcloud_to_laserscan_node" pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan" output="screen">
		<param name="output_frame_id" value="/rslidar"/>
	</node>

	<!-- Launch the gmapping node -->
	<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
		<param name="base_frame" value="base_link"	/>
		<param name="odom_frame" value="odom"		/>
    		<param name="map_update_interval" value="5.0"	/>
		<param name="range_min" value="0.1" 		/>
		<param name="range_max" value="30" 		/>
  	</node>
	
</launch>
