#!/bin/bash

cd "$(dirname "${BASH_SOURCE[0]}")"

set -e

source ./config

docker run -it \
  --name ${CONTAINER_NAME} \
  --volume ${PROJECT_ROOT}/catkin_ws:/catkin_ws \
  --rm \
  --runtime=nvidia \
  --net=host \
  ${CONTAINER_NAME} "$@"

# Share a device with the Docker container by adding:
#   --device=/dev/ttyUSB0 \
# below the line containing "--name"
